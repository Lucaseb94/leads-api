# Configurações do Banco de Dados (mantidas)
spring.datasource.url=jdbc:postgresql://postgres:5432/leads_db
spring.datasource.username=aguia
spring.datasource.password=aguia@1234

# Flyway (mantido)
spring.flyway.enabled=true

# Configurações do Actuator (ajustadas para maior segurança)
management.endpoints.web.exposure.include=*
management.endpoint.health.show-details=always # Alterado de 'always' para mais segurança
management.endpoints.web.base-path=/actuator
management.server.port=8081  # Opcional: porta separada para monitoramento

# Segurança Adicional (recomendado)
management.endpoint.health.roles=ACTUATOR_ADMIN  # Exige role específica para detalhes